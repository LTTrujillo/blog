<p id="notice"><%= notice %></p>

<h1>Creed Thoughts</h1>
<img src="https://www.rollingstone.com/wp-content/uploads/2018/06/rs-10591-creedbratton-624-1366404234.jpg?resize=900,600&w=450">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <h3>All Posts</h3>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><button><%= link_to 'Show', post %></button></td>
        <td><button><%= link_to 'Edit', edit_post_path(post) %></button></td>
        <td><button class="button1"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<hr>
